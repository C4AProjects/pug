<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/imageChildItem"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_list_item_image"
        android:contentDescription="@null"
        android:layout_marginTop="8dp"
        android:padding="2dp" />

    <TextView
        android:id="@+id/textReplyChildItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="reply"
        android:textSize="12sp"
        android:textColor="@color/details_child_reply"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/textCommentChildItem"
        android:layout_toRightOf="@+id/imageChildItem"
        android:layout_toEndOf="@+id/imageChildItem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Natasha"
        android:id="@+id/textNameChildItem"
        android:textColor="@color/details_child_title"
        android:layout_alignTop="@+id/imageChildItem"
        android:layout_toRightOf="@+id/imageChildItem"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:layout_marginRight="8dp"
        android:maxLines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textCommentChildItem"
        android:textSize="13sp"
        android:layout_below="@+id/textNameChildItem"
        android:layout_alignLeft="@+id/textReplyChildItem"
        android:layout_alignStart="@+id/textReplyChildItem" />

</RelativeLayout>