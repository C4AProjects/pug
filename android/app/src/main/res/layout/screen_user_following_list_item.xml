<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/imageChildItem"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_list_item_image"
        android:contentDescription="@null"
        android:layout_marginTop="8dp"
        android:padding="2dp" />

    <TextView
        android:id="@+id/itemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5 mins ago"
        android:textSize="12sp"
        android:layout_weight="27"
        android:textColor="@color/home_list_item_color"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBottom="@+id/imageChildItem"
        android:layout_toRightOf="@+id/imageChildItem"
        android:layout_toEndOf="@+id/imageChildItem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hintText"
        android:id="@+id/itemContent"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/imageChildItem"
        android:layout_toRightOf="@+id/imageChildItem"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:layout_marginRight="8dp"
        android:maxLines="2" />

</RelativeLayout>