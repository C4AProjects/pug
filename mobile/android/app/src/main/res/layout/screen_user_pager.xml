<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="?actionBarSize"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/pagerPlayerIcon"
        android:layout_width="@dimen/dimen_96"
        android:layout_height="@dimen/dimen_96"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:background="@drawable/drawer_image_selector"
        android:clickable="true"
        android:contentDescription="@null"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_list_item_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <TextView
            android:id="@+id/pagerPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Lebron James"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="21sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:padding="@dimen/dimen_3">

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/drawer_separator" />

            <ImageView
                android:id="@+id/imageDrawerLocation"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/view"
                android:layout_toRightOf="@+id/view"
                android:contentDescription="@null"
                android:src="@drawable/ic_drawer_location" />

            <TextView
                android:id="@+id/pagerPlayerLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/imageDrawerLocation"
                android:layout_toRightOf="@+id/imageDrawerLocation"
                android:text="Cleveland, Ohio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pagerPlayerRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/view"
                android:layout_toStartOf="@+id/view"
                android:text="Shooting Guard"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageDrawerRole"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/pagerPlayerRole"
                android:layout_toStartOf="@+id/pagerPlayerRole"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_drawer_role" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>