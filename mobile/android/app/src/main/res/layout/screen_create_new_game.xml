<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/area_icon" />

        <TextView
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"
            android:background="#353535"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/game_edittext_background"
            android:gravity="center"
            android:hint="Coders Reunion"
            android:padding="@dimen/dimen_15"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"
            android:background="#353535"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/location_icon" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"
            android:background="#353535"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/game_edittext_background"
            android:drawableLeft="@drawable/location_edittext_icon"
            android:gravity="center"
            android:hint="Half Nelson Playground"
            android:padding="@dimen/dimen_15"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"
            android:background="#353535"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/date_icon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"
            android:background="#353535"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/setDateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/game_button_background"
            android:gravity="center"
            android:padding="@dimen/dimen_15"
            android:text="12/24/2014"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"
            android:background="#353535" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/time_icon" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"
            android:background="#353535"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/setTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_25"
            android:background="@drawable/game_button_background"
            android:gravity="center"
            android:hint="12:00:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray"
            android:paddingLeft="@dimen/dimen_50"
            android:paddingRight="@dimen/dimen_50" />

        <Button
            android:id="@+id/createGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/create_game_button_background"
            android:gravity="center"
            android:hint="12:00:00"
            android:padding="@dimen/dimen_15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:text="Create Game"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
