<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageIconDrawerItem"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/dimen_4"
            android:src="@drawable/ic_item_profile"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="View Profile"
            android:id="@+id/textDrawerItem"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageIconDrawerItem"
            android:layout_toEndOf="@+id/imageIconDrawerItem"
            android:layout_marginLeft="32dp"
            android:textColor="@color/dark"
            android:clickable="true"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageToggleDrawerItem"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:src="@drawable/ic_item_open" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/toggleDrawerItem"
        android:layout_height="wrap_content">
        <View android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5" android:background="@color/drawer_item_divider"
            android:layout_marginLeft="@dimen/dimen_72" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listDrawerItemExpanded"
            android:layout_marginLeft="@dimen/dimen_72"
            android:dividerHeight="@dimen/dimen_0.5"
            android:divider="@color/drawer_item_divider"
            android:scrollbars="none"
            tools:listitem="@layout/drawer_sub_item_layout"
            android:choiceMode="singleChoice" />

        <View android:layout_width="match_parent" android:layout_height="@dimen/dimen_0.5" android:background="@color/drawer_item_divider"
            android:layout_marginLeft="@dimen/dimen_72" />

    </LinearLayout>
</LinearLayout>