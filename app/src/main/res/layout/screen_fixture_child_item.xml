<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3:00 PM"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/fix_child_time"
            android:textColor="@color/white"
            android:background="@drawable/fixture_time_shape"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="16dp"
            android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/fix_child_time"
        android:layout_toStartOf="@+id/fix_child_time"
        android:layout_marginTop="4dp"
        android:id="@+id/fix_linear_left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_team_2"
            android:id="@+id/fix_team_image_left"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Team Hawk"
            android:id="@+id/fix_team_left"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fix_linear_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/fix_child_time"
        android:layout_toRightOf="@+id/fix_child_time"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_team_1"
            android:id="@+id/fix_team_image_right"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shark Attack"
            android:id="@+id/fix_team_right"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="VS"
        android:id="@+id/fix_vs"
        android:layout_alignBottom="@+id/fix_linear_right"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Captain Rivera Playground"
        android:id="@+id/fix_venue"
        android:layout_below="@+id/fix_linear_left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="7 joined (3 spots left)"
        android:id="@+id/fix_capacity"
        android:layout_below="@+id/fix_venue"
        android:layout_centerHorizontal="true" />


</RelativeLayout>